{% extends 'admin/base.html.twig' %}

{% block title %}Wanders{% endblock %}

{% block body %}
    <h1>Wanders ({{ wanders|length }})</h1>

    <div class="row">
        <div class="col">
            <p><a href="{{ path('admin_wanders_new') }}">Create new Wander</a></p>
        </div>
        <div class="col text-right">
            Filters:
            <a href="{{ path('admin_wanders_index', { hasImages: false }) }}">No images</a>
            :
            <a href="{{ path('admin_wanders_index', { hasImages: true }) }}">Images</a>
            :
            <a href="{{ path('admin_wanders_index') }}">Clear</a>
        </div>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>StartTime</th>
                <th>EndTime</th>
                <th>Images</th>
                <th>Description</th>
                <th>GpxFilename</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wander in wanders %}
            <tr>
                <td>{{ wander.id }}</td>
                <td>{{ wander.title }}</td>
                <td class="text-nowrap {{ wander.isTimeLengthSuspicious ? 'text-danger' }}">{{ wander.startTime ? wander.startTime|date('d M Y H:i:s') : '' }}</td>
                <td class="text-nowrap {{ wander.isTimeLengthSuspicious ? 'text-danger' }}">{{ wander.endTime ? wander.endTime|date('d M Y H:i:s') : '' }}</td>
                <td>{{ wander.images.count }}</td>
                {#<td>{{ wander.description|striptags|markdown }}</td>#}
                <td>{{ wander.description | striptags | u.truncate(50, '...') }}</td>
                <td>{{ wander.gpxFilename }}</td>
                <td>
                    <a href="{{ path('admin_wanders_show', {'id': wander.id}) }}">show</a>
                    <a href="{{ path('admin_wanders_edit', {'id': wander.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}

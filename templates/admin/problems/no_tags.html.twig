{% extends 'admin/base.html.twig' %}

{% block title %}One-Mile Matt Wander: {{ wander.title }}: Images with No Tags{% endblock %}

{% block body %}
    <h1>Images with No Tags for Wander {{ wander.title }}</h1>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Image ID</th>
            </tr>
        </thead>
        <tbody>
            {% for image in wander.imagesWithNoTags %}
            <tr>
                <td><a href="{{ path('admin_image_show', {'id': image.id}) }}">{{ image.title ?? image.id }}</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

<!DOCTYPE html>
<html lang="en-GB" class="public {%block htmlClass %}{% endblock %}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="alternate" type="application/rss+xml" title="Wander Feed: RSS"
            href="{{ url('feed', {'_format': 'rss2'}) }}">
        {#
        <link rel="alternate" type="application/atom+xml" title="Wander Feed: Atom"
            href="{{ url('feed', {'_format': 'atom'}) }}">
        #}
        <title>{% block title %}{{ settings.siteTitle }}â€”{{ settings.siteSubtitle }}{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/main.css">
        {% endblock %}
    </head>
    <body>
        <div class="container-xl d-flex h-100 flex-column px-0">
            <div class="row">
                <div class="col-sm">
                    {{ include('_nav.html.twig') }}
                </div>
            </div>
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
            crossorigin="anonymous">
        </script>
        {% endblock %}
    </body>
</html>

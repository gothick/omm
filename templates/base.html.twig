<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ settings.siteTitle }}!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/main.css">
        {% endblock %}
    </head>
    <body>
        <div class="container-lg px-0">
            <header>
                <h1><a href="{{ path('home') }}">{{ settings.siteTitle }}</a></h1>
                <p>{{ settings.siteSubtitle }}</p>
            </header>

            <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #f2f2fd;">
                {# <a class="navbar-brand" href="#">Navbar</a> #}
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav mr-auto">
                        <a class="nav-item nav-link {% if app.request.attributes.get('_route') == 'home' %} active {% endif %}" href="{{ path('home') }}">Home</a>
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <a class="nav-item nav-link {% if app.request.attributes.get('_route') starts with 'wander_' %} active {% endif %}" href="{{ path('wander_index') }}">Wanders</a>
                        <a class="nav-item nav-link {% if app.request.attributes.get('_route') starts with 'settings_' %} active {% endif %}" href="{{ path('settings_index') }}">Settings</a>
                        {% endif %}
                        <a class="nav-item nav-link {% if app.request.attributes.get('_route') starts with 'about_' %} active {% endif %}" href="{{ path('about_index') }}">About</a>
                    </div>
                    <div class="navbar-nav">
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <a class="nav-item nav-link" href="{{ path('app_logout') }}">Log out</a>
                        {% endif %}
                    </div>
                </div>
            </nav>
            <main>
            {% block body %}{% endblock %}
            </main>
        </div>
        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" 
            crossorigin="anonymous">
        </script>        
        {% endblock %}
    </body>
</html>

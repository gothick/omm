{% extends 'base.html.twig' %}

{% block title %}Hello SettingsController!{% endblock %}

{% block body %}
    
    
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Setting</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-nowrap">Site Title</td>
                <td>{{ settings.siteTitle }}</td>
            </tr>
            <tr>
                <td class="text-nowrap">Site Sub-Title</td>
                <td>{{ settings.siteSubtitle }}</td>
            </tr>
            <tr>
                <td class="text-nowrap">Site About Page Text</td>
                <td>{{ settings.siteAbout|striptags|markdown }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('settings_edit') }}">Edit settings</a>

{% endblock %}

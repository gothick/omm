{% extends 'admin_base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
    <h1>Image index</h1>
    <p><a href="{{ path('image_new') }}">Upload new Image</a></p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>Description</th>
                <th>SizeInBytes</th>
                <th>MimeType</th>
                <th>OriginalName</th>
                <th>Keywords</th>
                <th>Dimensions</th>
                <th>Co-ordinates</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{{ image.name }}</td>
                <td>{{ image.title }}</td>
                <td>{{ image.description }}</td>
                <td>{{ image.sizeInBytes }}</td>
                <td>{{ image.mimeType }}</td>
                <td>{{ image.originalName }}</td>
                <td>{{ image.Keywords|join(', ') }}</td>
                <td>{{ image.dimensions|join('x') }}</td>
                <td>{{ image.latlng|join(', ') }}</td>
                <td>{{ image.updatedAt ? image.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('image_show', {'id': image.id}) }}">show</a>
                    <a href="{{ path('image_edit', {'id': image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
